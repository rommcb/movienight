<h1 id="winner"  class="h1_center">And the winner is!</h1>
<% @movies.each do |movie| %>
<div class="movie really_hidden">
  <div class="res_title really_hidden"><%= movie.title %></div>
  <div class="parent_div">
    <div class="move_1">
      <div class="image_div_1" id="img">
        <p id="movie_name"><%= movie.title %></p>
        <img src="#" alt="image" id="img_result" class="image<%= movie.id%>">
      </div>
    </div>
  </div>
</div>
<% end %>
 <% if @event.event_subscriptions.where(owner: true)[0].user.id == current_user.id %>
<div class="res_button">
<%= link_to "Restart Event!", edit_event_path(@event.id), class: :res_link%>

<button id="reveal_btn" type="button"> Show result</button>
</div>
<% end %>




<script>
  document.querySelector("#reveal_btn").addEventListener("click", () => {
  const movie_sel = document.getElementsByClassName("movie_back")
  for(let i = 0; i < movie_sel.length; i++){
  movie_sel[i].classList.add('really_hidden')
  }
  }, false)
</script>
