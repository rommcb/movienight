




<div class="res_button hidden">
  <% if @event.event_subscriptions.where(owner: true)[0].user.id == current_user.id %>
    <%= link_to "Restart this event!", edit_event_path(@event.id), class: :res_link %>
  <% end %>
  <%= link_to "Back to your events", events_path, class: :res_link %>
</div>

<div class="really_hidden" id="event_id"><%= @event.id %></div>

<% if @event.event_subscriptions.where(owner: true)[0].user.id == current_user.id || @event.closed == true%>
  <div class="wrap">
    <button id="reveal_btn" type="button" class="button"> Reveal</button>
  </div>
<% else %>
  <h2 class="not_reveal_msg">The owner must close the event</h2>
  <div class="wrap">
    <div id="not_reveal_btn" type="button" class="button"> Reveal</div>
  </div>
<% end %> 

