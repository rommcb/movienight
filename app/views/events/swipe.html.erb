<h1>Happy swiping!</h1>
<p>Swipe until movies get matched.</p>
<p id="movie_name" ><%= @event_movie.movie.title %></p>
<img src=<%= @event_movie.movie.cover %> alt="cover" id="img_swipe">
<%= simple_form_for @event_movie, {url: event_movie_path(@event_movie.id)} do |f| %>
  <%= f.hidden_field :id %>
  <%= f.submit "I like", name: "like", id: "likebtn"  %>
  <%= f.submit "Dislike", name: "dislike", id: "donotlikebtn" %>
<% end %>



<script>

const myevent = document.getElementById("likebtn").addEventListener("click", function(item){
